<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gcash1">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        app:cardBackgroundColor="#781616">

                        <ImageButton
                            android:id="@+id/backButton2"
                            android:layout_width="58dp"
                            android:layout_height="match_parent"
                            android:background="#781616"
                            android:outlineAmbientShadowColor="@color/black"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:visibility="visible"
                            app:srcCompat="@drawable/abc_vector_test"
                            tools:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#1E6CBD">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="132dp"
                            android:background="#1E6CBD"
                            android:scaleType="fitStart"
                            android:scaleX=".50"
                            android:scaleY=".50"
                            app:srcCompat="@drawable/gcash3" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_outer"
                        android:layout_width="359dp"
                        android:layout_height="484dp"
                        android:layout_gravity="center"
                        android:translationY="-50dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="50dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_inner"
                            android:layout_width="357dp"
                            android:layout_height="473dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            app:cardBackgroundColor="#ECECEC"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/editTextTextPersonName3"
                                android:layout_width="307dp"
                                android:layout_height="61dp"
                                android:editable="false"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:text="Enter Authentication Code"
                                android:textColor="#000000"
                                android:textColorHint="#ECECEC"
                                android:textColorLink="#ECECEC"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:translationX="35dp"
                                android:translationY="150dp" />

                            <EditText
                                android:id="@+id/Auth_Code"
                                android:layout_width="119dp"
                                android:layout_height="61dp"
                                android:autofillHints="X X X X"

                                android:ems="10"
                                android:hint="X X X X"
                                android:inputType="number"
                                android:lineSpacingExtra="36sp"
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:textColorHint="#1E6CBD"
                                android:textColorLink="#ECECEC"
                                android:textSize="24sp"
                                android:translationX="120dp"
                                android:translationY="200dp" />


                            <Button
                                android:id="@+id/Submit2"
                                android:layout_width="297dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gcash_button"
                                android:text="Next"
                                android:textSize="18sp"
                                android:translationX="30dp"
                                android:translationY="325dp"
                                app:backgroundTint="#1E6CBD" />

                            <TextView
                                android:id="@+id/Resend"
                                android:layout_width="289dp"
                                android:layout_height="34dp"
                                android:gravity="center"
                                android:shadowColor="#FFFFFF"
                                android:text="Need a new code? Click here(7)"
                                android:textColor="#777373"
                                android:textColorHint="#ECECEC"
                                android:textColorLink="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="30dp"
                                android:translationY="375dp" />

                            <TextView
                                android:id="@+id/MobileNo"
                                android:layout_width="266dp"
                                android:layout_height="wrap_content"
                                android:text="We sent an authentication code to your number XXXXXXXXXXX"
                                android:textColor="#777373"
                                android:translationX="80dp"
                                android:translationY="30dp" />

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <!-- <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:background="#1E6CBD"
                app:srcCompat="@drawable/gcash3" />
-->
        </LinearLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>